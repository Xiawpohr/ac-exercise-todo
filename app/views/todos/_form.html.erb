<%= form_for @todo do |f| %>
	<%= f.label :task, 'Task' %>
	<%= f.text_field :task %>

	<%= f.label :due_date, 'Due date' %>
	<%= f.text_field :due_date %>

	<%= f.submit button %>
<% end %>

<% if @todo.errors.any? %>
 <ul>
   <% @todo.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
 </ul>
<% end %>